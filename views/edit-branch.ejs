<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Branch</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="logo">⚡ NEXUS ADMIN</div>
        <a href="/" class="nav-link">Dashboard Home</a>
    </nav>
    <div class="container">
        <div class="page-title-row">
            <h2>Edit Branch</h2>
            <a href="/menu" class="cancel-btn">← Cancel</a>
        </div>
        <div class="edit-container">
            <div class="edit-card">
                <form action="/branch/edit/<%= branch.BranchID %>" method="POST">
                    <div style="margin-bottom: 20px;">
                        <label class="form-label">BRANCH ID (LOCKED)</label>
                        <input type="text" value="<%= branch.BranchID %>" class="modern-input locked-input" disabled>
                    </div>
                    <div style="margin-bottom: 20px;">
                        <label class="form-label">BRANCH NAME</label>
                        <input type="text" name="name" value="<%= branch.name %>" class="modern-input" required>
                    </div>
                    <div style="margin-bottom: 20px;">
                        <label class="form-label">LOCATION</label>
                        <input type="text" name="location" value="<%= branch.location %>" class="modern-input">
                    </div>
                    <div style="margin-bottom: 20px;">
                        <label class="form-label">PHONE</label>
                        <input type="text" name="phone" value="<%= branch.phone_number %>" class="modern-input">
                    </div>
                    <div style="margin-bottom: 30px;">
                        <label class="form-label">MENU TYPE</label>
                        <select name="menu_id" class="modern-input">
                            <% menus.forEach(m => { %>
                                <option value="<%= m.MenuID %>" <%= m.MenuID == branch.MenuID ? 'selected' : '' %>>
                                    <%= m.menu_type %>
                                </option>
                            <% }) %>
                        </select>
                    </div>
                    <button type="submit" class="save-btn">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>